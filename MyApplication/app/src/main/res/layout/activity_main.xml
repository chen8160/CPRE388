<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="testing.homework2.MainActivity">


    <TextView
        android:text="ABC For Ages 1 - 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:rowCount="1"
        android:columnCount="3"
        android:layout_height="wrap_content">

        <Button
            android:clickable="false"
            android:layout_height="163dp" />

        <ImageView android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            />

        <Button
            android:clickable="false"
            android:layout_height="163dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="4"
        android:alignmentMode="alignMargins">

        <Button android:text="A"
            android:layout_gravity="center"/>
        <Button android:text="B"
            android:layout_gravity="center"/>
        <Button android:text="C"
            android:layout_gravity="center"/>
        <Button android:text="D"
            android:layout_gravity="center"/>
        <Button android:text="E"
            android:layout_gravity="center"/>
        <Button android:text="I"
            android:layout_gravity="fill"
            android:layout_rowSpan="2" />
        <Button android:text="J"
            android:layout_gravity="fill"
            android:layout_rowSpan="2" />
        <Button android:text="G"
            android:layout_gravity="center"/>
        <Button android:text="H"
            android:layout_gravity="center"
            android:layout_column="3"/>
        <Button
            android:text="F"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="2"/>


    </GridLayout>
</LinearLayout>
